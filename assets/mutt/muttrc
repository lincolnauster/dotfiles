set smtp_url = "smtps://lincolnauster@gmail.com@smtp.gmail.com/"
set folder = imaps://imap.gmail.com/
set spoolfile = "+INBOX"
unset record
set postponed = "+[Gmail].Drafts"

set mail_check = 30

alternative_order multipart/mixed multipart/related text/plain
mime_lookup application/octet-stream

set signature = "printf 'Lincoln Auster\nThey/Them\n'|"

set editor = "amp --line_length_guide 72"

set mime_type_query_command = "xdg-mime query filetype"

set sort = "reverse-date"

bind index g save-message
bind pager g save-message

macro index,pager h "<delete-message><previous-undeleted>"

bind index H undelete-message
bind pager H undelete-message

bind index t reply
bind pager t reply

bind index n previous-undeleted
bind pager n previous-undeleted

bind index s next-undeleted
bind pager s next-undeleted

bind index N previous-entry
bind pager N previous-entry

bind index S next-entry
bind pager S next-entry

macro index <f1> "<change-folder>=INBOX<enter>"
macro index <f2> "<change-folder>=[Gmail]/All%20Mail<enter>"

